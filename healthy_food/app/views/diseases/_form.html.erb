  </div>


  <div class="form-group row">
    <div class="control-label col-sm-2">
    </div>
    <div class=" actions col-sm-offset-2 col-sm-9" align="left">
      <%= form.submit "Done", class: 'btn btn-success btn-lg' %>
      <%= link_to 'Cancle', diseases_path, class: 'btn btn-warning btn-lg' %>
    </div>
  </div>
<% end %>
