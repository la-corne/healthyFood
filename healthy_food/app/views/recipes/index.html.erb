  /* Style the close button */
  .close {
    position: absolute;
    right: 0;
    top: 0;
    padding: 12px 16px 12px 16px
  }
  .close:hover {
    background-color: #f44336;
    color: white;
  }
  /* Style the input */
  .modal .modal-content .modal-body .header input {
    width: 75%;
    padding: 10px;
    float: left;
    font-size: 13px;
  }

  /* Style the "Add" button */
  .addBtn {
    padding: 10px;
    width: 25%;
    background: #d9d9d9;
    color: #555;
    float: left;
    text-align: center;
    font-size: 16px;
    cursor: pointer;
    transition: 0.3s;
  }

  .addBtn:hover {
    background-color: #bbb;
  }
  .header:after {
    content: "";
    display: table;
    clear: both;
  }


  /* Style the list items */
  .modal .modal-content .modal-body  ul li {
    cursor: pointer;
    position: relative;
    padding: 12px 8px 12px 40px;
    background: #eee;
    font-size: 18px;
    transition: 0.2s;

    /* make the list items unselectable */
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
  }

  /* Set all odd list items to a different color (zebra-stripes) */
  .modal .modal-content .modal-body  ul li:nth-child(odd) {
    background: #f9f9f9;
  }

  .modal .modal-content .modal-body ul li:hover {
    background: #ddd;
  }

  /* When clicked on, add a background color and strike out text */
  .modal .modal-content .modal-body ul li.checked {
    background: #888;
    color: #fff;
    text-decoration: line-through;
  }

  /* Add a "checked" mark when clicked on */
  .modal .modal-content .modal-body ul li.checked::before {
    content: '';
    position: absolute;
    border-color: #fff;
    border-style: solid;
    border-width: 0 2px 2px 0;
    top: 10px;
    left: 16px;
    transform: rotate(45deg);
    height: 15px;
    width: 7px;
  }
  .header {
    background-color: black;
    padding: 30px 40px;
    text-align: center;
  }

  /* Clear floats after the header */
  .header:after {
