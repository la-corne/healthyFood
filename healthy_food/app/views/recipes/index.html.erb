<p id="notice"><%= notice %></p>

<h1>Recipes</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Desiases</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @recipes.each do |recipe| %>
    <tr>
      <td><%= recipe.name %></td>
      <td><%= recipe.description %></td>
      <td><%= recipe.desiases %></td>
      <td><%= link_to 'Show', recipe %></td>
      <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
      <td><%= link_to 'Destroy', recipe, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
    <tr>

      <!--to show information about the created user and when it's created and when it's last updated-->
      <div class="recipe-meta-details">
        <small>Created by: <%= recipe.user.username if recipe.user %>,

          <%= time_ago_in_words(recipe.created_at) %> ago,

          last updated: <%= time_ago_in_words(recipe.updated_at) %> ago</small>
      </div>

    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path %>
