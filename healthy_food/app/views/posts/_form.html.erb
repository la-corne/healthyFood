<body class="background">
<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



  <div class="field text-center">
    <%= form.file_field :description_image %>
  </div>

  <div class="form-group row">
    <div class="control-label col-sm-2">
    </div>
    <div class="col-sm-8">
      <%= form.text_field :name, class: "form-control", placeholder: "Post name", autofocus: true %>
    </div>
  </div>


  <div class="form-group row">
    <div class="control-label col-sm-2">
    </div>
    <div class="col-sm-8">
      <%= form.text_area :description, class: "form-control", placeholder: "Description ...", autofocus: true %>
    </div>
  </div>


  <div class="form-group row">
    <div class="control-label col-sm-2">
    </div>
    <div class=" actions col-sm-offset-2 col-sm-9">
      <%= form.submit "Create post", class: 'btn btn-success btn-lg' %>
      <%= link_to 'Cancel', posts_path , class: 'btn btn-warning btn-lg'%>
    </div>
  </div>
<% end %>
</body>